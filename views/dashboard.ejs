<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Library Issue Register</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <div class="container-fluid" style="background-color:#ffd54f;padding-bottom:10%;">
      <div class="row">
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand">DASHBOARD</a>
            </div>
            <a style="float:right" class="navbar-brand" href="/logout">Logout</a>
          </div>
        </nav>
      </div>
      <div class="row text-center">
        <h3><b><u>Due Issues List</u></b></h3>
      </div>
      <div class="row" style="margin-top:3%;margin-left:1%;margin-right:1%;margin-bottom:2%">
        <table id="due_issue_table" class="display" width="100%">
          <thead>
              <th>Book ID</th>
              <th>Book Name</th>
              <th>Issued By</th>
              <th>Phone No.</th>
              <th>Branch</th>
              <th>Regd.no.</th>
              <th>Issue Date</th>
              <th></th>
              <th></th>
          </thead>
          <tbody>
          <tr>
            <td>DE23</td>
            <td>Stolen</td>
            <td>Alice</td>
            <td>9999999999</td>
            <td>CSE</td>
            <td>2345</td>
            <td>12/1/17</td>
            <td><button id="add_btn" class="btn btn-info" data-toggle="modal" data-target="#editIssue">Edit</button></td>
            <td><button id="add_btn" class="btn btn-success" data-toggle="modal" data-target="#returnIssue">Return</button></td>
          </tr>
        </tbody>
        </table>
      </div>
      <div class="row text-center" style="margin-bottom:5%">
        <button id="add_btn" class="btn btn-primary" data-toggle="modal" data-target="#newIssue">New Issue</button>
      </div>

      <div class="row text-center">
        <h3><b><u>Returned Issues List</u></b></h3>
      </div>
      <div class="row" style="margin-top:3%;margin-left:1%;margin-right:1%">
        <table id="returned_issue_table" class="display" width="100%">
          <thead>
            <th>Book ID</th>
            <th>Book Name</th>
            <th>Issued By</th>
            <th>Phone No.</th>
            <th>Branch</th>
            <th>Regd.no.</th>
            <th>Issue Date</th>
            <th>Returned Date</th>
            <th></th>
          </thead>
          <tbody>
          <tr>
            <td>DE23</td>
            <td>Stolen</td>
            <td>Alice</td>
            <td>9999999999</td>
            <td>CSE</td>
            <td>2345</td>
            <td>12/1/17</td>
            <td>17/1/17</td>
            <td><button id="add_btn" class="btn btn-danger">Delete</button></td>
          </tr>
        </tbody>
        </table>
      </div>

      //Add item modal
      <div id="newIssue" class="modal fade">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><b>New Issue</b></h4>
            </div>
            <div class="modal-body">
              <form action="/additem" method="post">
                <table width="100%">
                  <tr>
                    <td style="float:right">Book Name:</td>
                    <td><input type="text"></td>
                    <td style="float:right">Book ID:</td>
                    <td><input type="text"></td>
                  </tr>
                  <tr>
                    <td><font color="#ffffff">""</font></td>
                  </tr>
                  <tr>
                    <td style="float:right">Issued By:</td>
                    <td><input type="text"></td>
                    <td style="float:right">Phone no.:</td>
                    <td><input type="text"></td>
                  </tr>
                  <tr>
                    <td><font color="#ffffff">""</font></td>
                  </tr>
                  <tr>
                    <td style="float:right">Branch:</td>
                    <td><input type="text"></td>
                    <td style="float:right">Regd.no.:</td>
                    <td><input type="text"></td>
                  </tr>
                  <tr>
                    <td><font color="#ffffff">""</font></td>
                  </tr>
                  <tr>
                    <td style="float:right">Issue Date:</td>
                    <td><input type="date"></td>
                  </tr>
                </table>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Add</button>
            </form>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      //Edit item modal
      <div id="editIssue" class="modal fade">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><b>Edit Issue</b></h4>
            </div>
            <div class="modal-body">
              <form action="/edititem" method="post">
                <table width="100%">
                  <tr>
                    <td style="float:right">Book Name:</td>
                    <td><input type="text" id="bookname"></td>
                    <td style="float:right">Book ID:</td>
                    <td><input type="text" id="bookid"></td>
                  </tr>
                  <tr>
                    <td><font color="#ffffff">""</font></td>
                  </tr>
                  <tr>
                    <td style="float:right">Issued By:</td>
                    <td><input type="text" id="issuedby"></td>
                    <td style="float:right">Phone no.:</td>
                    <td><input type="text" id="phoneno"></td>
                  </tr>
                  <tr>
                    <td><font color="#ffffff">""</font></td>
                  </tr>
                  <tr>
                    <td style="float:right">Branch:</td>
                    <td><input type="text" id="branch"></td>
                    <td style="float:right">Regd.no.:</td>
                    <td><input type="text" id="regdno"></td>
                  </tr>
                  <tr>
                    <td><font color="#ffffff">""</font></td>
                  </tr>
                  <tr>
                    <td style="float:right">Issue Date:</td>
                    <td><input type="date" id="issuedate"></td>
                  </tr>
                </table>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary">Save changes</button>
            </form>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      //Return item modal
      <div id="returnIssue" class="modal fade">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title"><b>Return Issue</b></h4>
            </div>
            <div class="modal-body">
              <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary">Return</button>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

   </div>
  </body>
  <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

  <script>
    $(document).ready(function(){
      $('#due_issue_table').DataTable();
    });
    $(document).ready(function(){
      $('#returned_issue_table').DataTable();
    });
    $('#newIssue').modal('show');
    $('#editIssue').modal('show');
    $('#returnIssue').modal('show');
  </script>
</html>
